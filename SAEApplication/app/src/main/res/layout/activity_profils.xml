<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/profil_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="ToChange"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/profil_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:contentDescription="userimage"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/user_photo" />
    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/pseudoTextView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Pseudo :"-->
<!--        android:textSize="16sp" />-->
<!--    <EditText-->
<!--        android:id="@+id/pseudoTextViewInput"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:inputType="text"-->
<!--        android:minHeight="48dp"-->
<!--        android:textColorHint="#BDBDBD"-->
<!--        android:textSize="16sp" />-->

    <TextView
        android:id="@+id/profil_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom : "
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:id="@+id/profil_nom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:textSize="20sp"
        android:textColorHint="#BDBDBD"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/profil_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prenom :"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:id="@+id/profil_prenom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#BDBDBD"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/save_or_quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="Sauvegarder et quitter"
        android:textColor="#311B92" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:id="@+id/exit"
            android:text="Quitter"
            />
</LinearLayout>