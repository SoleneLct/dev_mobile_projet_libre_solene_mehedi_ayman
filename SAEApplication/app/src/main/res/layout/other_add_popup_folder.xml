<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".Activity.Other.AddFolderDialog">

<TextView
    android:id="@+id/dialog_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ajouter votre propre dossier"
    android:textSize="18sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/folder_name_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nom de votre dossier :"
    android:textSize="16sp" />

    <EditText
        android:id="@+id/folder_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisissez le nom de votre dossier"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Annuler" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="CrÃ©er" />

</LinearLayout>

</LinearLayout>
