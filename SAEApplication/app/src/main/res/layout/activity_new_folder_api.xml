<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.Other.CreateFolderWithApiActivity">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Ajouter votre dossier pour cette image"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/folder_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Nom de votre dossier :"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/folder_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Saisissez le nom de votre dossier"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/proposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Proposition :"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/spinner_proposition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Annuler" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="CrÃ©er" />
    </LinearLayout>
</LinearLayout>
